{% extends 'base.html.twig' %}

{% block title %}Calcul d'événement{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h4><i class="bi bi-calculator"></i> Calculateur d'événement</h4>
                </div>
                <div class="card-body">

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="mb-3">
                            {{ form_label(form.typeEvenement, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.typeEvenement, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.typeEvenement) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.nbPersonnes, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.nbPersonnes, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nbPersonnes) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.nbEnfants, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.nbEnfants, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nbEnfants) }}
                            {{ form_help(form.nbEnfants) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.dateEvenement, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.dateEvenement, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.dateEvenement) }}
                        </div>

                        <div class="d-grid">
                            {{ form_widget(form.calculer) }}
                        </div>

                    {{ form_end(form) }}

                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}

